{
    "manifest_version": 2,
    "name": "chrome-extension-name",
    "description": "chrome extension",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ]
}