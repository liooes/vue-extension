{
    "manifest_version": 2,
    "name": "best",
    "description": "best chrome extension",
    "version": "1.0.3",
    "background": {
        "scripts": [
            "/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],"permissions": 
    [    
        "tabs",     
        "http://*/",    
        "https://*/",  
        "cookies",
        "notifications",
        "storage",
        "unlimitedStorage"  
    ],
    "icons": 
  { 
    "16": "best16.png",             
    "48": "best48.png",            
    "128": "best128.png" 
  }, 
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}